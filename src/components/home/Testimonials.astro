---
// src/components/home/Testimonials.astro

// Placeholder data
const testimonials = [
  {
    quote: "Grazie al Dr. Nome Cognome ho finalmente superato l'ansia che mi limitava da anni. Il suo approccio empatico e professionale mi ha fatto sentire compreso e supportato.",
    name: "Marco B.",
    role: "Cliente da 1 anno",
    imageUrl: "https://placehold.co/100x100/cccccc/333333?text=MB"
  },
  {
    quote: "Il percorso di terapia di coppia ci ha aiutato a ritrovare l'armonia e a comunicare meglio. Siamo molto grati per il supporto ricevuto.",
    name: "Sara e Luca",
    role: "Clienti da 6 mesi",
    imageUrl: "https://placehold.co/100x100/cccccc/333333?text=SL"
  },
  {
    quote: "Consiglio vivamente il Dr. Nome Cognome. Mi ha fornito strumenti pratici per gestire lo stress lavorativo e migliorare la mia qualit√† di vita.",
    name: "Giulia R.",
    role: "Cliente da 2 anni",
    imageUrl: "https://placehold.co/100x100/cccccc/333333?text=GR"
  }
];
---
<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-serif font-bold text-gray-800">Cosa Dicono i Miei Clienti</h2>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
        Scopri come ho aiutato altre persone nel loro percorso di crescita personale.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-gray-50 rounded-lg p-6 shadow-sm hover:shadow-md transition flex flex-col">
          <div class="flex items-center mb-4">
            <div class="text-yellow-400 flex">
              <!-- Star Rating (5 stars) -->
              {[...Array(5)].map((_, i) => (
                <svg key={i} class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          </div>
          <p class="text-gray-600 italic mb-6 flex-grow">"{testimonial.quote}"</p>
          <div class="flex items-center mt-auto">
            <div class="w-12 h-12 rounded-full bg-gray-300 overflow-hidden flex-shrink-0">
              <img src={testimonial.imageUrl} alt={testimonial.name} width="100" height="100" class="w-full h-full object-cover" />
            </div>
            <div class="ml-4">
              <h4 class="font-medium text-gray-800">{testimonial.name}</h4>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
