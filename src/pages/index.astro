---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
// Import landing page components
import Hero from '../components/home/Hero.astro';
import ServicesCarousel from '../components/home/ServicesCarousel.astro';
import About from '../components/home/About.astro';
import Testimonials from '../components/home/Testimonials.astro';
import NewsletterForm from '../components/global/NewsletterForm.astro';
