---
// src/components/global/NewsletterForm.astro
---
<section class="py-16 bg-teal-50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-8 md:p-12">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-serif font-bold text-gray-800">Iscriviti alla Newsletter</h2>
          <p class="mt-3 text-gray-600">
            Ricevi consigli, articoli e risorse gratuite sul benessere psicologico direttamente nella tua casella email.
          </p>
        </div>

        <form class="newsletter-form" id="newsletter-form">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <label for="newsletter-email" class="sr-only">Email</label>
              <input
                type="email"
                id="newsletter-email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                placeholder="La tua email"
              />
            </div>
            <button
              type="submit"
              class="px-6 py-3 bg-teal-600 text-white font-medium rounded-md hover:bg-teal-700 transition"
            >
              Iscriviti
            </button>
          </div>

          <div class="mt-4">
            <label class="flex items-start">
              <input type="checkbox" required class="mt-1 mr-2 flex-shrink-0" />
              <span class="text-sm text-gray-600">
                Acconsento a ricevere la newsletter e accetto la
                <a href="/privacy" class="text-teal-600 hover:underline">privacy policy</a>.
              </span>
            </label>
          </div>
          <div id="newsletter-message" class="mt-4 text-sm"></div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Basic form handling placeholder
  const form = document.getElementById('newsletter-form');
  const messageDiv = document.getElementById('newsletter-message');

  if (form && messageDiv) {
    form.addEventListener('submit', (event) => {
      event.preventDefault();
      // In a real application, you would send this data to an API endpoint
      // e.g., using fetch()
      const emailInput = form.querySelector('#newsletter-email') as HTMLInputElement;
      console.log('Subscribing email:', emailInput.value);

      // Display a success message (placeholder)
      messageDiv.textContent = 'Grazie per esserti iscritto!';
      messageDiv.className = 'mt-4 text-sm text-green-600';
      form.reset();

      // Clear message after a few seconds
      setTimeout(() => {
        messageDiv.textContent = '';
        messageDiv.className = 'mt-4 text-sm';
      }, 5000);
    });
  }
</script>
